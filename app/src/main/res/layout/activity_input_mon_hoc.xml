<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.InputMonHoc"
    android:focusable="true"
    android:gravity="center"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ten Mon Hoc"
                app:boxStrokeColor="#ccc"
                android:textColorHint="#929695"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_input_MonHoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_book" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btn_Insert_MonHoc"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:background="@drawable/btn_selector_1"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert Mon Hoc"
                android:textSize="18dp"
                />
            <include layout="@layout/monhoc_recycle"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>